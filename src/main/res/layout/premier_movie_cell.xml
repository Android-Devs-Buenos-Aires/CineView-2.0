<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/celda_recycler_view_busqueda_pelicula"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_fondo_celda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagen_celda_busqueda"
            android:layout_width="141dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toTopOf="@+id/fecha_pelicula_celda_busqueda"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titulo_pelicula_celda_busqueda" />

        <TextView
            android:id="@+id/titulo_pelicula_celda_busqueda"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:background="#B3141414"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="John Wick: 3"
            android:textColor="#cccccc"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/imagen_celda_busqueda"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/fecha_pelicula_celda_busqueda"
            android:layout_width="141dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:gravity="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="#cccccc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen_celda_busqueda"
            tools:text="01/01/01" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>